<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/currency"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Convert"
        android:layout_width="198dp"
        android:layout_height="135dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="100dp"
        android:onClick="convertAmount"
        android:text="@string/convert"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#00BCD4" />


    <EditText
        android:id="@+id/DollarseditTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="360dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/amount_in_dollars"
        android:inputType="number"
        android:minHeight="48dp"
        android:onClick="convertAmount"
        android:textColorHint="#263238"
        app:layout_constraintBottom_toTopOf="@+id/Convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>